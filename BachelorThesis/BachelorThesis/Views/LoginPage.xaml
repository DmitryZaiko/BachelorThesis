<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BachelorThesis.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Autorizācija" FontSize="Large" HorizontalOptions="CenterAndExpand" />
            <Entry Text="{Binding  EmailInput}" Placeholder="E-pasts"/>
            <Entry Text="{Binding PasswordInput}" Placeholder="Parole" IsPassword="True"/>
            <Button Text="Ieiet" Clicked="OnLoginButtonClicked"/>
            <Label Text="{Binding ErrorMessage}" 
                   FontSize="Medium" 
                   TextColor="DarkRed"
                   HorizontalOptions="CenterAndExpand" />
            <Label x:Name="asAGuestLabel"
                   Text="Ieiet kā Viesis" 
                   FontSize="Medium" 
                   TextColor="DarkGray"
                   HorizontalOptions="CenterAndExpand" />
            <Label x:Name="registrationLabel"
                   Text="Izveidot jaunu kontu" 
                   FontSize="Medium" 
                   TextColor="DarkGray"
                   HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>