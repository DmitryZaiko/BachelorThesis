<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BachelorThesis.Views.QuizPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Question}" FontSize="Large" 
                   TextColor="#3c3c3c" HorizontalOptions="Center"
                   Margin="0,150,0,10"/>
            <ListView x:Name="ItemsListView"
                ItemsSource="{Binding Answers}"
                SeparatorColor="Transparent"
                VerticalOptions="FillAndExpand"
                HasUnevenRows="true"
                RefreshCommand="{Binding LoadItemsCommand}"
                IsPullToRefreshEnabled="true"
                IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                CachingStrategy="RecycleElement"
                ItemSelected="OnItemSelected">
                <!--ItemSelected="OnItemSelected">-->
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame Margin="25, 5" BackgroundColor="{Binding AnswerColor}">
                                <Label Text="{Binding QuizAnswer.Name}"
                                       Style="{DynamicResource ListItemTextStyle}" 
                                       FontSize="16" />
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label x:Name="Reaction"
                   FontSize="Large"
                   VerticalOptions="Start"
                   HorizontalOptions="CenterAndExpand">
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="AnswerStates">
                        <VisualState x:Name="Correct">
                            <VisualState.Setters>
                                <Setter Property="TextColor" Value="Green" />
                            </VisualState.Setters>
                        </VisualState>

                        <VisualState x:Name="Incorrect">
                            <VisualState.Setters>
                                <Setter Property="TextColor" Value="Red" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
            </Label>
            <Button x:Name="nextButton" 
                    VerticalOptions="End" 
                    HorizontalOptions="Fill"
                    Text="Nākamais"
                    Clicked="OnNextButtonClicked"
                    IsVisible="False"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>